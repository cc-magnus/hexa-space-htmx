{
  "name": "hexa-space",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "bundle": "parcel build --no-optimize --no-content-hash --no-scope-hoist public/index.ts --dist-dir public/",
    "start:all": "concurrently \"npm run bundle\" \"npm run start:ssr\" \"npm run start:api\"",
    "start:ssr": "tsx --watch src/ssr/ssr.tsx",
    "start:api": "tsx --watch src/api/api.ts",
    "test": "vitest",
    "typecheck": "clear; tsc"
  },
  "dependencies": {
    "@hono/node-server": "^1.9.1",
    "@types/node": "18.13.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "hono": "^4.2.2",
    "node-json-db": "^2.1.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remeda": "^1.9.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^8.2.2",
    "jsdom": "^21.1.0",
    "parcel": "^2.12.0",
    "tsx": "^4.7.2",
    "vitest": "^0.29.2"
  }
}
